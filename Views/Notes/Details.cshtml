@model Notes.Data.Notes
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href ="#author">Author</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#home">Title</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#profile">Content</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#download">Download</a>
        </li>
    </ul>
<div id="myTabContent" class="tab-content">
    <div class ="tab-pane fade" id="author">
        <p>@Model.Author</p>
    </div>
    <div class="tab-pane fade" id="home">
        <p>@Model.Title</p>
    </div>
    <div class="tab-pane fade" id="profile">
        <p>@Model.Content</p>
    </div>
    <div class="tab-pane fade active show" id="download">
        <a asp-action ="DownloadFile" asp-controller ="Notes" asp-route-id="@Model.NotesId">Download file</a>
    </div>
</div>
