@model Notes.Data.Notes
<h2>Welcome to creation form</h2>
<div @*class="row"*@>
   
    <div @*class="row-cols-md-20"*@>
        <section>
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="None" class="text-danger">
                    <div class="form-group">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="form-control" />
                        <span asp-validation-for="@Model.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Content"></label>
                        <input asp-for="@Model.Content" class="form-control" />
                        <span asp-validation-for="@Model.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class ="col-md-10">
                            <input  type="file" name ="file" />
                        </div>
                    </div>
                </div>
                <button type ="submit" class="btn btn-outline-primary">Submit</button>
            </form>
        </section>
    </div>
</div>